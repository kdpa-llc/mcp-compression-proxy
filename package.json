{
  "name": "mcp-tool-aggregator",
  "version": "0.1.0",
  "description": "MCP server that aggregates tools from multiple MCP servers with LLM-based description compression",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "bin": {
    "mcp-aggregator": "./dist/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "aggregator",
    "compression",
    "llm",
    "claude"
  ],
  "author": "kdpa-llc",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
