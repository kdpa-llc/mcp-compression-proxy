{
  "name": "mcp-tool-aggregator",
  "version": "0.1.0",
  "description": "MCP server that aggregates tools from multiple MCP servers with LLM-based description compression",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:e2e:real-llm": "jest tests/e2e-real --testTimeout=120000",
    "docker:e2e": "docker-compose -f docker-compose.e2e.yml up --abort-on-container-exit"
  },
  "bin": {
    "mcp-aggregator": "./dist/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "aggregator",
    "compression",
    "llm",
    "claude"
  ],
  "author": "kdpa-llc",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
